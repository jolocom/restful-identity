{
  "name": "restful-identity",
  "version": "1.4.0",
  "description": "A local server providing a jolocom identity",
  "main": "main.js",
  "files": [
    "dist/**/*.js",
    "main.js"
  ],
  "directories": {
    "test": "test"
  },
  "bin": {
    "restful-identity": "main.js"
  },
  "node_deb": {
    "entrypoints": {
      "daemon": "main.js --daemon"
    }
  },
  "scripts": {
    "test": "NODE_ENV=test npx jest --verbose --runInBand",
    "build": "rm -rf dist && tsc -p .",
    "start": "node main.js",
    "dev": "ts-node --files ./server.ts",
    "deb_pkg": "node-deb -- ./main.js dist/"
  },
  "keywords": [],
  "author": "Jolocom",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "fastify": "^2.0.0",
    "fastify-plugin": "^1.5.0",
    "fastify-swagger": "^2.4.0",
    "hardware_key_provider": "0.4.8",
    "ini": "^1.3.5",
    "jolocom-lib": "^4.0.0-beta.0",
    "jolocom-lib-stax-connector": "^0.4.0",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/ini": "^1.3.30",
    "@types/jest": "^24.0.11",
    "@types/minimist": "^1.2.0",
    "@types/node": "^11.13.0",
    "@types/supertest": "^2.0.7",
    "jest": "^24.7.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1",
    "node-deb": "^0.10.7"
  }
}
